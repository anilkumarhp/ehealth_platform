FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements/production.txt /app/
RUN pip install --no-cache-dir -r /app/production.txt

# Copy application code
COPY . .

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DJANGO_SETTINGS_MODULE=hms_config.settings.production

# Expose the port
EXPOSE 8005

# Run the application
CMD ["gunicorn", "--bind", "0.0.0.0:8005", "--workers", "4", "hms_config.wsgi:application"]